<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelAPP.MainPage">

    <StackLayout  Margin="15" VerticalOptions="Center">
        <Entry x:Name="entryEmail" Placeholder="Email" Keyboard="Email"></Entry>
        <Entry x:Name="entryPWD" Placeholder="Password" IsPassword="True"></Entry>
        <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked" BackgroundColor="#3F4B63" TextColor="White"></Button>
    </StackLayout>

</ContentPage>
